            android:text="+" />
    </LinearLayout>

    <!-- Якудза -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Якудза"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnSurface" />

        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onYakuzaDecrement"
            android:text="-" />

        <TextView
            android:id="@+id/tvYakuzaCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnSurface" />

        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onYakuzaIncrement"
            android:text="+" />
    </LinearLayout>

    <!-- Шериф -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Шериф"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnSurface" />

        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSheriffDecrement"
            android:text="-" />

        <TextView
            android:id="@+id/tvSheriffCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnSurface" />

        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSheriffIncrement"
            android:text="+" />
    </LinearLayout>

    <!-- Мирные жители -->
    <TextView
        android:id="@+id/tvCitizenCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Мирные жители: 0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="?attr/colorOnSurface" />

    <!-- Кнопка для начала игры -->
    <Button
        android:id="@+id/btnStart"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Начать игру" />
</LinearLayout>
