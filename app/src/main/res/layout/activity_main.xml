<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Общий стиль для заголовков -->
    <!-- Здесь используем стандартный sans-serif-medium -->

    <!-- Общее количество игроков -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Общее количество игроков"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnSurface" />

        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onTotalPlayersDecrement"
            android:text="-" />

        <TextView
            android:id="@+id/tvTotalPlayersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:fontFamily="sans-serif"
            android:text="15"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnSurface" />

        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onTotalPlayersIncrement"
            android:text="+" />
    </LinearLayout>

    <!-- Дон мафии -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Дон мафии"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnSurface" />

        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMafiaDonDecrement"
            android:text="-" />

        <TextView
            android:id="@+id/tvMafiaDonCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnSurface" />

        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMafiaDonIncrement"
            android:text="+" />
    </LinearLayout>

    <!-- Мафия -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Мафия"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnSurface" />

        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMafiaDecrement"
            android:text="-" />

        <TextView
            android:id="@+id/tvMafiaCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnSurface" />

        <Button
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMafiaIncrement"
            android:text="+" />
    </LinearLayout>

    <!-- Комиссар -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Комиссар"
